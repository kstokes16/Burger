<div class="container">
<br>
    <div class="row">
        <div class="col text-center">
            <h1>Eat Da Burger!</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <label for="exampleFormControlInput1"><h4>Enter the name of a burger you would like to devour!</h4></label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mx-auto text-center">
                <form>
                    <div class="form-group">
                    <input type="email" class="form-control" id="burger-form">
                    </div>
                </form>
                    
                    <button type="button" class="btn btn-warning text-center" id="add-burger">Add my burger please!</button>

        </div>
    </div>

    <br>
    <br>

    <div class="row">
        <div class="col-md-6">
            <h5>Burgers waiting to be devoured are shown below:</h5>
            <br>

        {{#each burger_data}}
        {{#unless this.devoured}}
       
          <p>    
            {{this.id}}. {{this.burger_name}}
            <button type="button" class="btn btn-danger" id="devour-it-button">Devour it!</button>
          </p>
       
        {{/unless}}
        {{/each}}

        </div>

        <div class="col-md-6 text-center">
            <h5>Burgers that have been devoured are shown here:</h5>
            <br>

        {{#each burger_data}}
        {{#if this.devoured}}
       
          <p>    
            {{this.id}}. {{this.burger_name}}
          </p>
       
        {{/if}}
        {{/each}}


        </div>

    </div>

</div>

